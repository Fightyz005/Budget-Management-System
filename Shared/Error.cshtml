@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6">
        <div class="card border-danger">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                </div>
                
                <h1 class="display-4 text-danger mb-3">เกิดข้อผิดพลาด</h1>
                
                <p class="lead mb-4">
                    ขออภัย! เกิดข้อผิดพลาดในระบบ
                </p>

                @if (Model?.ShowRequestId ?? false)
                {
                    <div class="alert alert-warning">
                        <strong>Request ID:</strong> @Model.RequestId
                    </div>
                }

                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>กลับสู่หน้าหลัก
                    </a>
                </div>

                <div class="mt-3">
                    <small class="text-muted">
                        หากปัญหายังคงเกิดขึ้น กรุณาติดต่อผู้ดูแลระบบ
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fa-exclamation-triangle {
        animation: shake 0.5s;
        animation-iteration-count: 1;
    }
</style>
